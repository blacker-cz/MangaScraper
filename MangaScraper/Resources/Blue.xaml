<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
        Schema color based on metro pallete by COLOURlover
        http://www.colourlovers.com/palette/1/metro
    -->
    
    <!--ACCENT COLORS-->
    <Color x:Key="HighlightDarkColor">#FF00B4FF</Color>
    <Color x:Key="HighlightLightColor">#FF00B4FF</Color>

    <Color x:Key="AccentDarkColor">#FF00B4FF</Color>

    <!--80%-->
    <Color x:Key="AccentColor">#CC00B4FF</Color>
    <!--60%-->
    <Color x:Key="AccentColor2">#9900B4FF</Color>
    <!--40%-->
    <Color x:Key="AccentColor3">#6600B4FF</Color>
    <!--20%-->
    <Color x:Key="AccentColor4">#3300B4FF</Color>

    <LinearGradientBrush x:Key="BrandingBrush"
                         EndPoint="0.001,0.5"
                         StartPoint="1.002,0.5">
        <GradientStop Color="{DynamicResource HighlightDarkColor}"
                      Offset="0" />
        <GradientStop Color="#FFEEEEEE"
                      Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="AccentColorBrush"
                     Color="{StaticResource AccentColor}" />


</ResourceDictionary>